<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Mood Tracker</title>
  <link rel="shortcut icon" href="favicon.ico">
  <link rel="stylesheet" href="font-awesome.min.css">
  <link rel="stylesheet" href="styles.css">
</head>
<body>
  <h1>Journaling</h1>
  <h2>Morning Thoughts</h2>


  <h3>Messages</h3>
  <ul class="messages">
  <% for(var i=0; i<messages.length; i++) {%>
    <li <%= messages[i].feeling == 'smile' ? 'class = happy'
    : messages[i].feeling == 'frown' ? 'class = sad' : 'class = messages' %>>
      <span><%= messages[i].name %></span>
      <span><%= messages[i].msg %></span>
      <span><%= messages[i].intentions %></span>
      <span><%= messages[i].grateful %></span>
      <span><%= messages[i].affirmations %></span>
      <span><%= messages[i].text %></span>
      <span><i class="fa fa-trash" aria-hidden="true"></i></span>
      <span><i class="fa fa-smile-o" aria-hidden="true"></i></span>
      <span><i class="fa fa-frown-o" aria-hidden="true" ></i></span>
    </li>

  <% } %>
  </ul>

  <h2>Add a message</h2>

  <form action="/messages" method="POST">

    <input type="date" placeholder="name" name="name">
        <button class="submit" type="submit">Submit</button> 
     <!-- <input type="text" placeholder="message" name="msg">  -->
    <textarea class="messagearea" placeholder="How are you feeling?" name="msg"></textarea>
    <textarea  class="messagearea" placeholder="Today's intentions..." name="intentions"></textarea>
    <textarea class="messagearea" placeholder="What are 3 things your grateful for today..." name="grateful"></textarea>
    <textarea  class="messagearea" placeholder="Affirmations:" name="affirmations"></textarea>
    <textarea class="messagearea" placeholder="Something you're looking forward to today..." name="text"></textarea>
   
  </form>

  
    
  

  <script src="main.js"></script>

</body>
</html>
